#docker commands

docker build -t onmtreaction -f Docker/Dockerfile_onmtreaction .

docker run -it --rm --gpus all -v ~/Documents/onmtreaction/folder:/home/data/ -u 1000:1000 onmtreaction bash

#In podman, GPU and other hardware specifications are configured via software
podman run --name onmt --privileged -it --rm -v ~/onmtreaction/folder:/home/data onmt bash

## INSIDE CONTAINER

	> cd data/

    # BUILD VOCAB
	> onmt_build_vocab -config configtrain.yaml
    
    # TRAIN MODEL
	> onmt_train -config configtrain.yaml

    # AVERAGE MODEL
	> cd models/
	> onmt_average_models -m model/model_step_* -o model/model_average.pt
	> cd ../

    # TRANSLATE
	> onmt_translate -config configtransl.yaml --batch_size 64

